{
    "compilerOptions": {
        "allowJs": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "skipLibCheck": true,
        "strict": true,
        "isolatedModules": true,
        "target": "esnext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "paths": {
            "@/*": [
                "./resources/js/*"
            ],
            "ziggy-js": ["./vendor/tightenco/ziggy"]
        },
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.svelte"
    ]
}
